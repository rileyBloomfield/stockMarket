<h4>Market By Price</h4>
<div class="row">
    <div class="large-6 columns">
        <table class="sideBySide">
            <thread>
                <th colspan="2">Buy</th>
                <tr>
                    <td>Number</td>
                    <td>Volume</td>
                    <td>Price</td>
                </tr>
            </thread>
            <tbody>
            {{#each order in controllers.marketInfo.compressedBuyOrders}}
                <tr>
                    <td>{{order.number}}</td>
                    <td>{{order.volume}}</td>
                    <td>{{order.price}}</td>
                <tr>
            {{/each}}
            </tr>
            </tbody>
        </table>
    </div>
    <div class="large-6 columns">
        <table class="sideBySide">
            <thread>
                <th colspan="2">Sell</th>
                <tr>
                    <td>Price</td>
                    <td>Volume</td>
                    <td>Number</td>
                </tr>
            </thread>
            <tbody>
            {{#each order in controllers.marketInfo.compressedSellOrders}}
                <tr>
                    <td>{{order.price}}</td>
                    <td>{{order.volume}}</td>
                    <td>{{order.number}}</td>
                <tr>
            {{/each}}
            </tr>
            </tbody>
        </table>
    </div>
</div>